                                                                               
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
   <div class="row">
      <div class="col-md-12">
         <div id="content" class="content content-full-width">
            <!-- begin profile -->
            <div class="profile">
               <div class="profile-header">
                  <!-- BEGIN profile-header-cover -->
                  <div class="profile-header-cover"></div>
                  <!-- END profile-header-cover -->
                  <!-- BEGIN profile-header-content -->
                  <div class="profile-header-content">
                     <!-- BEGIN profile-header-img -->
                     <div class="profile-header-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="">
                     </div>
                     <!-- END profile-header-img -->
                     <!-- BEGIN profile-header-info -->
                     <div class="profile-header-info">
                        <h4 class="m-t-10 m-b-5"><%=current_user.username.capitalize%></h4>
                        <p class="m-b-10"><%=current_user.email%></p>
                        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-xs btn-primary"%>
                     </div>
                     <!-- END profile-header-info -->
                  </div>
                  <!-- END profile-header-content -->
                  <!-- BEGIN profile-header-tab -->
                  <ul class="profile-header-tab nav nav-tabs">
                     <li class="nav-item"><%= link_to "MY POSTS", my_post_path, class: "nav-link"%></li>
                     
                     <li class="nav-item"><a href="#profile-friends" class="nav-link active show" data-toggle="tab">FRIENDS</a></li>

                  </ul>
                  <!-- END profile-header-tab -->
               </div>
            </div>
            <!-- end profile -->
            <!-- begin profile-content -->
            <div class="profile-content">
               <!-- begin tab-content -->
               <div class="tab-content p-0">
                  <!-- begin #profile-friends tab -->
                  <div class="tab-pane fade in active show" id="profile-friends">
                     <h4 class="m-t-0 m-b-20">My Friend (<%=current_user.friends.count%>)</h4>
                     <!-- begin row -->
                     <div class="row row-space-2">
                        <!-- begin col-6 -->

                        <% User.all.each do |u|%>
                          <% if u.id != current_user.id && current_user.is_friend?(u)%>
                            <div class="col-md-6 m-b-2">
                              <div class="p-10 bg-white">
                                  <div class="media media-xs overflow-visible">
                                    <a class="media-left">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="media-object img-circle">
                                    </a>
                                    <div class="media-body valign-middle">
                                        <b class="text-inverse"><%=u.username%></b>
                                    </div>
                                    <div class="media-body valign-middle text-right overflow-visible">
                                        <div class="btn-group dropdown">
                                          
                                          <%= link_to "Remove", remove_friend_path(user_id: u.id), class: "btn btn-danger", title: "Remove" %>
                                          
                                            
                                        </div>
                                    </div>
                                  </div>
                              </div>
                            </div>
                          <%end%>
                        <%end%>


                        
                      
                        
                        
                        <!-- end col-6 -->
                     </div>

                     <br>
                     <hr>
                     <br>


                     <div class="tab-pane fade in active show" id="profile-friends">
                     <h4 class="m-t-0 m-b-20">Present Users</h4>
                     <!-- begin row -->
                     <div class="row row-space-2">
                        <!-- begin col-6 -->

                        <% User.all.each do |u|%>
                          <% if u.id != current_user.id && !current_user.is_friend?(u)%>
                            <div class="col-md-6 m-b-2">
                              <div class="p-10 bg-white">
                                  <div class="media media-xs overflow-visible">
                                    <a class="media-left">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="media-object img-circle">
                                    </a>
                                    <div class="media-body valign-middle">
                                        <b class="text-inverse"><%=u.username%></b>
                                    </div>
                                    <div class="media-body valign-middle text-right overflow-visible">
                                        <div class="btn-group dropdown">
                                          
                                       
                                          <%= form_for current_user.friendships.build(friend: u) do |f|%>
                                             <%= f.hidden_field :friend_id%>
                                             <button class="btn btn-default">Add</button>
                                          <%end%>
                                       
                                        </div>
                                    </div>
                                  </div>
                              </div>
                            </div>
                          <%end%>
                        <%end%>


                        
                      
                        
                        
                        <!-- end col-6 -->
                     </div>


                     <!-- end row -->
                  </div>
                  <!-- end #profile-friends tab -->
               </div>
               <!-- end tab-content -->
            </div>
            <!-- end profile-content -->


            

            



         </div>



         


      </div>
   </div>
  </div>


<p id="notice"><%= notice %></p>

<h1>My Posts</h1>
<br><br>

<% @posts.each do |post| %>

<div class="card gedf-card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-2">
                    <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                </div>
                <div class="ml-2">
                    <div class="h5 m-0">&nbsp;<%=current_user.username.capitalize%></div>
                    
                </div>
            </div>
            <div>
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                        <div class="h6 dropdown-header"></div>
                        <%= link_to 'Show', post, class: "dropdown-item" %>
                        <% if user_signed_in?%>
                        <%= link_to 'Edit', edit_post_path(post), class: "dropdown-item" %>
                        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i><%=post.created_at.strftime("%A, %d, %Y, %H:%M")%></div>
        
        
        <h5 class="card-title"><%= post.title %></h5>
        

        <p class="card-text">
            <%= truncate(post.content,:length => 50, :omission => '... (continued)') %>
        </p>
    </div>
    <div class="card-footer">
        <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
        <a href="#" class="card-link"><i class="fa fa-comment"></i> Thread</a>
    </div>
    </div>
    
  <%end%>

<br>
